<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 班级映射文件 -->
<mapper namespace="com.codeying.mapper.ClazzMapper">


    <!--查询-->
    <select id="sqlSelectList" resultType="com.codeying.entity.Clazz">
        select * from tb_Clazz t
        <where>
            <if test="vo!=null and vo.name != null and vo.name != ''">
                t.name like CONCAT('%',#{ vo.name },'%');
            </if>
        </where>
    </select>

    <delete id="sqlDelete">
        delete from tb_Clazz where id = #{id}
    </delete>
    
    <update id="sqlUpdate">
        update tb_Clazz
        set id=#{id}  ,name=#{name}  ,bzr=#{bzr}  ,tele=#{tele} 
        where id= #{id}
    </update>

    <insert id="sqlSave">
        insert into tb_Clazz values(
        #{id}, ,#{name}  ,#{bzr}  ,#{tele} 
        )
    </insert>

</mapper>

