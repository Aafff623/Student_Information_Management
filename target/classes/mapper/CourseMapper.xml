<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 课程映射文件 -->
<mapper namespace="com.codeying.mapper.CourseMapper">


    <!--查询-->
    <select id="sqlSelectList" resultType="com.codeying.entity.Course">
        select * from tb_Course t
        <where>
            <if test="vo!=null and vo.name != null and vo.name != ''">
                t.name like CONCAT('%',#{ vo.name },'%');
            </if>
        </where>
    </select>

    <delete id="sqlDelete">
        delete from tb_Course where id = #{id}
    </delete>
    
    <update id="sqlUpdate">
        update tb_Course
        set id=#{id}  ,name=#{name}  ,teacherid=#{teacherid}  ,score=#{score}  ,describtion=#{describtion} 
        where id= #{id}
    </update>

    <insert id="sqlSave">
        insert into tb_Course values(
        #{id}, ,#{name}  ,#{teacherid}  ,#{score}  ,#{describtion} 
        )
    </insert>

</mapper>

